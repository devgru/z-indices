{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },

  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-use-before-define": [2, "nofunc"],

    "no-alert": 0
  }
}
